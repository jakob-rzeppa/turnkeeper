{
    "extends": "@tsconfig/node22/tsconfig.json",
    "include": ["**/*.ts", "vitest.config.*", "eslint.config.*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",

        "noEmit": false,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "types": ["node"]
    }
}
