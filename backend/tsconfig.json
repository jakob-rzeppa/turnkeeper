{
    "extends": "@tsconfig/node22/tsconfig.json",
    "include": ["**/*.ts", "vitest.config.*", "eslint.config.*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",

        "noEmit": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": ["node"]
    }
}
